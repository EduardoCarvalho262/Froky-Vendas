@model Froky.Models.PRODUTO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Menubar.cshtml";
}

<br/>

<div class="form-container">

    <div class="page-header">
        <h1>Edite O Produto</h1>
    </div>
    @using (Html.BeginForm("Edit","PRODUTOes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="panel panel-primary">
            <div class=" Cor-Formulario">
                <div class="panel-heading">
                    <br />
                    <h4>Edite As Informações Do Produto</h4>
                </div>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.NOME, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.NOME, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NOME, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.QUANTIDADE, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.QUANTIDADE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.QUANTIDADE, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.PRECO, htmlAttributes: new { @class = "control-label col-md-0" })
                        @Html.EditorFor(model => model.PRECO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PRECO, "", new { @class = "text-danger" }) 
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4">
                        <label>Imagem do Produto</label>
                        <input type="file" name="ImageFile" />
                    </div>
                </div>
                
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="col-md-2">Categoria</label>
                        @*@Html.LabelFor(model => model.FK_CATEGORIA, "FK_CATEGORIA", htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.DropDownList("FK_CATEGORIA", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FK_CATEGORIA, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label class="col-md-2">Fornecedor</label>
                        @*@Html.LabelFor(model => model.FK_FORNECEDOR, "FK_FORNECEDOR", htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.DropDownList("FK_FORNECEDOR", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FK_FORNECEDOR, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.DESCRICAO, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextAreaFor(model => model.DESCRICAO, new { @class = "form-control col-md-12" })
                        @Html.ValidationMessageFor(model => model.DESCRICAO, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <input type="submit" value="Atualizar Informações" class="btn muda-btn-primary  ">
            </div>
            

                

                

                

                @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>*@
            </div>
        
    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

