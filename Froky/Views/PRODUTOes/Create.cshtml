@model Froky.Models.PRODUTO


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Menubar.cshtml";
}
<br />
<div class="form-container">
    <div class="page-header">
        <h1>Novo Produto</h1>
    </div>

    @using (Html.BeginForm("Create", "PRODUTOes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class=" panel panel-primary">
        <div class=" Cor-Formulario">
            <div class="panel-heading">
                <br />
                <h4>Preencha com as informações do produto</h4>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-4">

                    @Html.LabelFor(Model => Model.NOME, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(Model => Model.NOME, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do produto" } })
                    @Html.ValidationMessageFor(Model => Model.NOME, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(Model => Model.QUANTIDADE, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(Model => Model.QUANTIDADE, new { htmlAttributes = new { @class = "form-control", placeholder = "Quantidade disponível do produto" } })
                    @Html.ValidationMessageFor(Model => Model.QUANTIDADE, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(Model => Model.PRECO, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(Model => Model.PRECO, new { htmlAttributes = new { @class = "form-control", data_tipo = "moeda", placeholder = "Preço do produto" } })
                    @Html.ValidationMessageFor(Model => Model.PRECO, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row">
                <div class="input-group">
                    <div class="custom-file">
                        <div class="form-group col-md-8">
                            <label>Imagem do produto</label>
                            <input type="file" name="ImageFile" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    @Html.LabelFor(Model => Model.DESCRICAO, htmlAttributes: new { @class = "control-label" })
                    @Html.TextArea("DESCRICAO", null, new { @class = "form-control", placeholder = "Faça uma breve descrição do produto." })
                    @Html.ValidationMessageFor(Model => Model.DESCRICAO, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(Model => Model.FK_FORNECEDOR, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("FK_FORNECEDOR", null, "Fornecedor de origem", htmlAttributes: new { @class = "form-control", placeholder = "Fornecedor de origem" })
                    @Html.ValidationMessageFor(Model => Model.FK_FORNECEDOR, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(Model => Model.FK_CATEGORIA, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("FK_CATEGORIA", null, "Categoria Pertencente", htmlAttributes: new { @class = "form-control", placeholder = "Categoria Pertencente" })
                    @Html.ValidationMessageFor(Model => Model.FK_CATEGORIA, "", new { @class = "text-danger" })
                    @Html.ActionLink("Nova Categoria", "CreateCategoria", "PRODUTOes")
                </div>
            </div>


        </div>
        <div class="panel-footer ">
            <input type="submit" value="Cadastrar" class="btn muda-btn-primary  ">

        </div>
    </div>
       

        

    }
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
