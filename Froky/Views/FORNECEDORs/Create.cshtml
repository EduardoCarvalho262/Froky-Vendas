@model Froky.Models.FORNECEDOR

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Menubar.cshtml";
}
    
<br/>
<div class="form-container">
    <div class="page-header">
        <h1>Novo Fornecedor</h1>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


    <div class=" panel panel-primary">
        <div class=" Cor-Formulario">
            <div class="panel-heading">
                <br />
                <h4>Preencha com as informações do fornecedor</h4>
            </div>
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.RAZAO_SOCIAL, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.RAZAO_SOCIAL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RAZAO_SOCIAL, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.CNPJ, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.CNPJ, new { htmlAttributes = new { @class = "form-control", data_tipo = "cnpj" } })
                    @Html.ValidationMessageFor(model => model.CNPJ, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.TELEFONE_PRIMÁRIO, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TELEFONE_PRIMÁRIO, new { htmlAttributes = new { @class = "form-control", data_tipo = "telefone" } })
                    @Html.ValidationMessageFor(model => model.TELEFONE_PRIMÁRIO, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.TELEFONE_SECUNDÁRIO, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TELEFONE_SECUNDÁRIO, new { htmlAttributes = new { @class = "form-control", data_tipo = "telefone" } })
                    @Html.ValidationMessageFor(model => model.TELEFONE_SECUNDÁRIO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.E_MAIL, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.E_MAIL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.E_MAIL, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="panel-footer ">
            <input type="submit" value="Cadastrar" class="btn muda-btn-primary  ">

        </div>
    </div>

    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
