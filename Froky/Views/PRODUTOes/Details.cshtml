<div id="modalDetails" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 style="text-align:center;">Imagem do produto</h4>
            </div>
            @using (Html.BeginForm(new { @class = "form" }))
            {
                <div class="modal-body">
                    <img src="@Url.Content(Model.IMAGEM)" width="400" height="300" style="align-content:center;" />
                </div>
                <div class="modal-footer">
                   
                </div>
            }
        </div>
    </div>
</div>


