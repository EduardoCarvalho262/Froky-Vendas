                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.FORNECEDOR, htmlAttributes: new { @class = "control-label" })
                        <br />
                        @Html.DisplayFor(model => model.FORNECEDOR.RAZAO_SOCIAL, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(Model => Model.DESCRICAO, htmlAttributes: new { @class = "control-label" })
                        <br />
                        @Html.DisplayTextFor(Model => Model.DESCRICAO)
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn muda-btn-primary" /> |
                        @Html.ActionLink("Voltar para lista", "Index")
                    </div>
                }

            </div>

        </div>
